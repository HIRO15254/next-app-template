{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "module": "esnext",
  "compilerOptions": {
    "baseUrl": "src",
    "declaration": false,
    "jsx": "preserve",
    "noEmit": true,
    "outDir": "build",
    "resolveJsonModule": true,
    "rootDir": ".",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "lib": [
      "dom",
      "es2017"
    ],
    "allowJs": true,
    "incremental": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "**/*.stories.tsx",
  ]
}
